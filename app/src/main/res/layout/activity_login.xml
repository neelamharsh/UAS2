<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF"
    android:orientation="vertical"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:background="#B60F48"
        android:text="@string/login"
        android:gravity="center"
        android:textColor="#100E0F"
        android:textSize="28sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/usrn"
        android:layout_width="348dp"
        android:layout_height="37dp"
        android:background="#0CCC8383"
        android:hint="@string/username"
        android:layout_marginTop="50sp"
        android:layout_gravity="center"
        android:textColor="#070707"
        android:textColorHint="#612B2B"
        android:autofillHints=""
        android:inputType="textEmailAddress"
        tools:ignore="TextFields" />

    <EditText
        android:id="@+id/pswd"
        android:layout_width="348dp"
        android:layout_height="37dp"
        android:layout_gravity="center"
        android:layout_marginTop="20sp"
        android:background="#0CCC8383"
        android:hint="@string/password"
        android:textColor="#0B0A0A"
        android:textColorHint="#612B2B"
        android:autofillHints=""
        android:inputType="textPassword" />
    <TextView
        android:id="@+id/error"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="#F8F1F4"
        android:textColor="#0B0A0A"
        android:textSize="28sp"
        android:textStyle="bold" />
    <Button
        android:id="@+id/btnln"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:layout_gravity="center"
        android:background="#B60F48"
        android:text="@string/login" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/registered_now"
        android:layout_marginTop="10sp"
        android:textColor="#CD1C1C"
        android:gravity="center"
        android:clickable="true"
        android:id="@+id/reg"
        android:textSize="18sp"
        android:focusable="true" />

    <Button
        android:id="@+id/admin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/adminbtn" />

</LinearLayout>