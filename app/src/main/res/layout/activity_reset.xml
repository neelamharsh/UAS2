<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#390118"
    android:orientation="vertical"
    tools:context=".register">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Reset Password "
        android:textColor="#390118"
        android:background="#B60F48"
        android:gravity="center"
        android:textSize="24sp"/>

    <ImageView
        android:id="@+id/RImg"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:src="@drawable/user"
        android:layout_marginTop="20sp"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10sp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Password: "
            android:layout_marginLeft="0dp"
            android:textColor="#FFFF"
            android:paddingLeft="27sp"
            android:textSize="18sp"
            />
        <EditText
            android:id="@+id/RNPass"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#0CCC8383"
            android:hint="@string/xxxxxxx"
            android:textColor="#FFFF"
            android:textColorHint="#612B2B"
            android:autofillHints=""
            android:inputType="textPassword" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10sp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Confirm Password:"
            android:layout_marginLeft="5sp"
            android:paddingLeft="4sp"
            android:textColor="#FFFF"
            android:textSize="18sp"
            android:paddingStart="4sp" />
        <EditText
            android:id="@+id/RRPass"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#0CCC8383"
            android:hint="XXXXXXX"
            android:textColor="#FFFF"
            android:textColorHint="#612B2B"
            android:autofillHints="" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10sp"
        >
        <Button
            android:id="@+id/done"
            android:layout_width="100sp"
            android:layout_height="wrap_content"
            android:text="Done"
            android:background="#B60F48"
            android:layout_marginTop="60dp"
            android:gravity="center"
            android:clickable="true"
            android:layout_marginLeft="160dp"
            />
    </LinearLayout>
</LinearLayout>